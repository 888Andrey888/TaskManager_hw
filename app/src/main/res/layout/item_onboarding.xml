<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/skip"
        android:padding="@dimen/default_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    
    <ImageView
        android:id="@+id/img_board"
        android:layout_width="match_parent"
        android:layout_height="252dp"
        android:layout_margin="@dimen/default_margin"
        android:src="@color/black"
        android:scaleType="fitXY"
        app:layout_constraintTop_toBottomOf="@+id/tv_skip"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/default_margin"
        android:text="@string/title_on_boarding"
        android:textColor="@color/black"
        android:textSize="@dimen/default_text_size"
        app:layout_constraintEnd_toEndOf="@+id/img_board"
        app:layout_constraintStart_toStartOf="@+id/img_board"
        app:layout_constraintTop_toBottomOf="@+id/img_board" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/small_text_size"
        android:text="@string/description_on_boarding"
        android:layout_marginTop="@dimen/small_margin"
        app:layout_constraintEnd_toEndOf="@+id/img_board"
        app:layout_constraintStart_toStartOf="@+id/img_board"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"/>

    <Button
        android:id="@+id/btn_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:text="@string/get_started"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>